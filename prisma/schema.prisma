// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id              String      @id @default(uuid())
  surname         String
  otherNames      String
  loanType        LoanType?
  password        String?
  gender          Gender?
  role            UserRole    @default(User)
  email           String      @unique
  address         String?
  membership_fee  String      @default("0")
  cardUrl         String?
  nationality     String?
  cardType        cardType?
  homeAddress     String?
  officeAddress   String?
  telephone       String?
  photographUrl   String?
  guarantors      Guarantors[]
  entry_date      DateTime?   @default(now())
}

model Guarantors {
  id                  String  @id @default(uuid())
  name                String
  number              String
  email               String  @unique
  address             String
  cardType            String?
  cardUrl             String?
  placeOfWork         String?
  addressOfBusiness   String?
  homeAddress         String?
  telephone1          String?
  telephone2          String?
  positionHeld        String?
  photographUrl       String?
  UserID              String
  guranted_for        Users   @relation(fields: [UserID], references: [id])
}

enum UserRole {
  User
  Admin
}

enum Gender {
  Male
  Female
}

enum LoanType {
  SalaryLoan
  AssetFinancing
  SME
}

enum cardType {
  NIN
  VotersCard
  DriversLicense
  InternationalPassport
}

model LoanCategory {
  id     String @id @default(uuid())
  name   String
  amount Float? @default(0.0)
}