generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id             String       @id @default(uuid())
  name           String
  number         String
  password       String?
  role           UserRole     @default(User)
  email          String       @unique
  address        String?
  membership_fee String       @default("0")
  pictureUrl     String?
  cardFrontUrl   String?
  cardBackUrl    String?
  entry_date     DateTime?    @default(now())
  guarantors     Guarantors[]
}

model Guarantors {
  id           String  @id @default(uuid())
  name         String
  number       String
  email        String  @unique
  address      String
  pictureUrl   String?
  cardFrontUrl String?
  cardBackUrl  String?
  UserID       String
  guranted_for Users   @relation(fields: [UserID], references: [id])
}

enum UserRole {
  User
  Admin
}

model LoanCategory {
  id      String  @id @default(uuid())
  name    String
  amount  Float?  @default(0.0)
}
